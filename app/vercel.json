{
    "version": 2,
    "buildCommand": "composer install --optimize-autoloader --no-dev && npm install && npm run build",
    "builds": [
        { "src": "public/index.php", "use": "@vercel/php" }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "public/index.php" }
    ],
    "outputDirectory": "public"
}
